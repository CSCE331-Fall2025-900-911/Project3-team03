<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Employee Login</title>
  <link rel="stylesheet" href="/LoginPageCSS.css" />
</head>
<body>
    <!-- dark blue bar and logo -->
  <header class="header-container">
    <div class="logo-container">
      <a href="/"><img src="/logo.png" alt="Yi Fang Logo" class="logo" /></a>
    </div>
  </header>

  <div class="white-box-wrap">
    <h2>Employee Login</h2>
    <form id="loginForm">
      <div class="row">
        <label for="employeeID">Employee ID:</label>
        <input id="employeeID" name="employeeID" autocomplete="employeeID" required />
      </div>

      <div class="row">
        <label for="password">Password:</label>
        <input id="password" name="password" type="password" autocomplete="current-password" required />
      </div>

      <div class="row login-button">
        <a href="/employee">Login</a>
      </div>
    </form>
  </div>

    <!-- dark blue bar and logo -->
  <footer class="header-container">
    <div class="logo-container">
      <a href="/"><img src="/logo.png" alt="Yi Fang Logo" class="logo" /></a>
    </div>
  </footer>
</body>
</html>
