<!-- Accessibility Launcher Button -->
<button type="button"
        class="accessibility-launcher"
        aria-label="Open accessibility options"
        aria-pressed="false">
    <img src="/AccessibilityIcon.png"
         alt="Accessibility"
         class="accessibility-launcher-icon">
</button>

<!-- Accessibility Panel -->
<div class="accessibility-panel"
     role="dialog"
     aria-modal="false"
     aria-label="Accessibility options">

  <div class="accessibility-panel-header">
    <span class="accessibility-title">Accessibility</span>
    <button type="button"
            class="accessibility-close"
            aria-label="Close accessibility panel">âœ•</button>
  </div>

  <div class="accessibility-panel-body">
    <label class="accessibility-toggle">
      <span class="accessibility-toggle-label">ADHD Focus</span>

      <span class="accessibility-toggle-control">
        <input type="checkbox" aria-label="Toggle ADHD Focus mode">
        <span class="toggle-slider" aria-hidden="true"></span>
      </span>
    </label>

    <!-- Text to speech toggle -->
    <label class="accessibility-toggle">
        <span class="accessibility-toggle-label">Text to Speech</span>
        <span class="accessibility-toggle-control">
        <input type="checkbox"
                id="tts-toggle"
                aria-label="Toggle Text to Speech">
        <span class="toggle-slider" aria-hidden="true"></span>
        </span>
    </label>


    <!-- Implement Language translation -->
    <div class="accessibility-language">
      <span class="accessibility-toggle-label">Language / Translation</span>
      <div id="google_translate_element"></div>
    </div>
  </div>
</div>
